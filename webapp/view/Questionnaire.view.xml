<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.uxap"
  xmlns:layout="sap.ui.layout"
  xmlns:m="sap.m"
  xmlns:formengine="csrdreporting.formengine"
  controllerName="csrdreporting.controller.Questionnaire"
  height="100%">
  <ObjectPageLayout id="QuestionnairePageLayout" showFooter="true">
    <headerTitle>
      <ObjectPageHeader
        objectTitle="{i18n>Questionnaire_Title}"
        objectSubtitle="{= ${formEngine>/currentPage/title} || ${formEngine>/currentPage/id} }"
      />
    </headerTitle>

    <sections>
      <ObjectPageSection showTitle="false">
        <ObjectPageSubSection>
          <formengine:FormEngine class="sapUiResponsiveMargin" formEngineContext="{formEngine>/}" />
        </ObjectPageSubSection>
      </ObjectPageSection>
    </sections>

    <footer>
      <m:OverflowToolbar>
        <m:ToolbarSpacer />
        <m:Button
          text="{i18n>Questionnaire_PreviousStep}"
          enabled="{formEngine>/canGoBackward}"
          press="onPreviousPress"
        />
        <m:Button
          type="Emphasized"
          text="{i18n>Questionnaire_NextStep}"
          enabled="{formEngine>/canGoForward}"
          press="onNextPress"
        />
      </m:OverflowToolbar>
    </footer>
  </ObjectPageLayout>
</mvc:View>
