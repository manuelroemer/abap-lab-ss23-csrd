<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.uxap"
  xmlns:layout="sap.ui.layout"
  xmlns:m="sap.m"
  xmlns:formengine="csrdreporting.formengine"
  controllerName="csrdreporting.controller.Questionnaire"
  height="100%">
  <ObjectPageLayout id="QuestionnairePageLayout" upperCaseAnchorBar="false" showFooter="true">
    <headerTitle>
      <ObjectPageHeader id="questionnaire" objectTitle="{i18n>Questionnaire_Title}">
        <actions>
          <ObjectPageHeaderActionButton icon="sap-icon://edit" text="edit" importance="Medium" tooltip="edit" />
          <ObjectPageHeaderActionButton icon="sap-icon://save" text="save" tooltip="save" />
          <ObjectPageHeaderActionButton
            icon="sap-icon://action-settings"
            text="settings"
            importance="Low"
            tooltip="action-settings"
          />
        </actions>
      </ObjectPageHeader>
    </headerTitle>
    <headerContent>
      <m:Title text="{= ${formEngine>/currentPage/title} || ${formEngine>/currentPage/id} }" />
    </headerContent>
    <sections>
      <ObjectPageSection>
        <ObjectPageSubSection titleUppercase="false">
          <m:VBox>
            <formengine:FormEngine class="sapUiResponsiveMargin" formEngineContext="{formEngine>/}" />
          </m:VBox>
        </ObjectPageSubSection>
      </ObjectPageSection>
    </sections>
    <footer>
      <m:OverflowToolbar>
        <m:ToolbarSpacer />
        <m:Button
          text="{i18n>Questionnaire_PreviousStep}"
          enabled="{formEngine>/canGoBackward}"
          press="onPreviousPress"
        />
        <m:Button
          type="Emphasized"
          text="{i18n>Questionnaire_NextStep}"
          enabled="{formEngine>/canGoForward}"
          press="onNextPress"
        />
      </m:OverflowToolbar>
    </footer>
  </ObjectPageLayout>
</mvc:View>
