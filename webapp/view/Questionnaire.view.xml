<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.uxap"
  xmlns:layout="sap.ui.layout"
  xmlns:m="sap.m"
  xmlns:formengine="csrdreporting.formengine"
  controllerName="csrdreporting.controller.FormBuilder"
  height="100%">
  <ObjectPageLayout id="QuestionnairePageLayout" upperCaseAnchorBar="false" showFooter="true">
    <headerTitle>
      <ObjectPageHeader id="questionnaire" objectTitle="Questionnaire">
        <breadcrumbs>
          <m:Breadcrumbs currentLocationText="Page1">
            <m:Link text="CSRD" />
            <m:Link text="General Disclosure" />
          </m:Breadcrumbs>
        </breadcrumbs>
        <actions>
          <ObjectPageHeaderActionButton icon="sap-icon://edit" text="edit" importance="Medium" tooltip="edit" />
          <ObjectPageHeaderActionButton icon="sap-icon://save" text="save" tooltip="save" />
          <ObjectPageHeaderActionButton
            icon="sap-icon://action-settings"
            text="settings"
            importance="Low"
            tooltip="action-settings"
          />
        </actions>
      </ObjectPageHeader>
    </headerTitle>
    <headerContent>
      <m:Title text="{state>/pageTitle}" />
    </headerContent>
    <sections>
      <ObjectPageSection>
        <ObjectPageSubSection titleUppercase="false">
          <m:VBox>
            <formengine:FormEngine
              class="sapUiResponsiveMargin"
              schema="{state>/schema}"
              state="{state>/state}"
              page="{state>/page}"
            />
          </m:VBox>
        </ObjectPageSubSection>
      </ObjectPageSection>
    </sections>
    <footer>
      <m:OverflowToolbar>
        <m:ToolbarSpacer />
        <m:Button text="{i18n>Questionnaire_PreviousStep}" />
        <m:Button type="Emphasized" text="{i18n>Questionnaire_NextStep}" />
      </m:OverflowToolbar>
    </footer>
  </ObjectPageLayout>
</mvc:View>
