<mvc:View
  xmlns:layout="sap.ui.layout"
  controllerName="csrdreporting.controller.FormBuilderPagePropertiesArea"
  xmlns:mvc="sap.ui.core.mvc"
  displayBlock="true"
  xmlns="sap.m">
  <VBox class="sapUiMediumMargin">
    <VBox visible="{= !${state>/pageToEdit} }">
      <Text text="Select a page to edit its details." />
    </VBox>

    <VBox visible="{= !!${state>/pageToEdit} }">
      <Label text="ID" required="true" />
      <Input value="{state>/pageToEdit/id}" required="true" />
      <Text text="A unique identifier of the page." />

      <Label text="Title" class="sapUiSmallMarginTop" />
      <Input value="{state>/pageToEdit/title}" required="true" />
      <Text text="The page's title." />
    </VBox>
  </VBox>
</mvc:View>
